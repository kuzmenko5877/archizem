<div class="about">
    <div class="container">
        <div class="row flex-xxl-nowrap">
            <div class="col-xl-5 col-lg-6 col-md-12 col-sm-12 d-flex flex-wrap justify-content-lg-end">
                {% for img in post.meta('about_block_1') %}
                    <img src="{{ img.url }}" alt="{{ img.alt }}"  class="mb-2 col-lg-12 col-md-12 about-img">
                {% endfor %}
            </div>
            <div class="col-xl-7 col-lg-6 d-flex flex-wrap align-items-end">
                <div class="col-lg-11">
                    <h2 class="about-title">{{ post.meta('about_text')}}</h2>
                    <p class="about-textarea ">{{ post.meta('about_textarea')}}</p>
                </div>
                <a href="#" class="about-continue-reading mb-4">
                    <span>Читати далі</span>
                    <svg width="9" height="9" viewBox="0 0 9 9" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <mask id="mask0_0_564" style="mask-type:alpha" maskUnits="userSpaceOnUse" x="0" y="0" width="9" height="9">
                            <rect width="9" height="9" fill="#D9D9D9" />
                        </mask>
                        <g mask="url(#mask0_0_564)">
                            <path d="M3.18201 1.3501L6.36399 4.53208L3.18201 7.71406" stroke="#1E836B" stroke-width="2" />
                        </g>
                    </svg>
                </a>
                {% for img in post.meta('about_block_2') %}
                    <img src="{{ img.url }}" alt="{{ img.alt }}" class="mb-2 col-lg-12 col-md-12 about-block-img-2">
                {% endfor %}
            </div>
        </div>
    </div>
</div>
